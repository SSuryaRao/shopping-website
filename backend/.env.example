# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration
# For MongoDB Atlas (cloud) - replace with your actual connection string:
MONGO_URI=

# For local MongoDB, the server will automatically fall back to:
# mongodb://localhost:27017/mydb (if MONGO_URI connection fails)

# Firebase Admin SDK Configuration
# Get these values from your Firebase project settings > Service accounts > Generate new private key
# All three of these are REQUIRED for Firebase to work:
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key content here (keep the \n characters)\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Firebase Storage Configuration (OPTIONAL - only needed for Firebase-specific features):
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_CLIENT_ID=your-client-id

# Google Cloud Storage Configuration (REQUIRED for image uploads)
# Get these values from Google Cloud Console > IAM & Admin > Service Accounts
# Create a service account with "Storage Admin" role and download the JSON key
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name.appspot.com
GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour GCS private key content here (keep the \n characters)\n-----END PRIVATE KEY-----\n"
GCS_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Server Base URL (for local file uploads if GCS fails):
BASE_URL=http://localhost:5000

# Super Admin Configuration
# The email address of the super admin user who can manage invites and approve shopkeepers
# Users with this email will automatically get super admin privileges
SUPER_ADMIN_EMAIL=admin@yourdomain.com

# Razorpay Payment Gateway Configuration
# Get these from Razorpay Dashboard > Settings > API Keys
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# JWT Token Configuration (REQUIRED for multi-account authentication)
# Generate secure random strings for these secrets
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_TEMP_SECRET=your-temporary-token-secret-key-change-this-in-production-minimum-32-characters

# Password Hashing Configuration
BCRYPT_ROUNDS=10